---
import siteData from "../data/siteData.json";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title?: string;
  description?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title = siteData.title, description = siteData.description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

    <link href="/prism.css" rel="stylesheet" />


    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>JGU | {title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <!-- Open Graph -->
    <meta property="og:site_name" content={title} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={siteData.url} />
    <meta property="og:type" content="website">
    <meta property="og:image" content={siteData.image.src} />
    <meta property="og:image:url" content={siteData.image.src} />
    <meta
      property="og:image:secure_url"
      content={siteData.image.src}
    />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:alt" content={siteData.image.alt} />
    <script src="/prism.js" is:inline></script>
	</head>
	<body class="min-h-screen overflow-x-hidden flex flex-col gap-16
      max-w-4xl mx-auto pt-16 pb-8 px-4
    [&_p]:text-jg-charcoal
    [&_h1]:text-jg-charcoal">
		<Header />
    <div class="flex-1">
		  <slot />
    </div>
    <Footer />
	</body>
</html>