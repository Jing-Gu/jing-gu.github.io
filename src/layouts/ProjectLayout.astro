---
import type { CollectionEntry } from "astro:content";

import Layout from "./Layout.astro";

type Props = CollectionEntry<"project">["data"];

interface ProjectProps {
  title: string;
  imgSrc: string;
  tags?: string[];
}

const { title, imgSrc, tags }: ProjectProps = Astro.props;
---

<Layout title={title}>
  <div>
    <div class="">
      <img src={`../public/${imgSrc}`} alt="">
      <h1 class="text-3xl mb-8">{title}</h1>
      {
        tags?.map(tag => <span>{tag}</span>)
      }
    </div>
    <slot />
  </div>
</Layout>
