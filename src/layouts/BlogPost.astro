---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import Layout from './Layout.astro'

type Props = CollectionEntry<'blog'>['data'];

interface BlogProps {
  title: string;
  date: Date;
  tags?: string[];
}

const { title, date, tags }: BlogProps = Astro.props;
---

<Layout title={title}>
	<article class="[&_pre]:rounded-xl [&_time]:text-jg-teal [&_p]:leading-8 [&_p]:mb-5
		[&_blockquote]:pl-6 [&_blockquote]:border-l-4 [&_blockquote]:border-jg-teal
		[&_h2]:text-xl [&_h2]:lg:text-2xl [&_h2]:font-medium
		[&_ul]:list-disc [&_ul]:text-jg-charcoal [&_ul]:leading-8 [&_ul]:ml-4 [&_ul]:mb-5
		[&_code:not([class])]:bg-jg-fog [&_code:not([class])]:text-jg-salmon
		[&_code:not([class])]:rounded-sm [&_code:not([class])]:p-1 ">
		<FormattedDate date={date} />
		<div class="mb-10">
			<h1 class="text-2xl lg:text-4xl font-semibold my-4">{title}</h1>
			{
				tags?.map(tag => <span class="bg-jg-cream py-2 px-4 text-sm text-jg-smoke rounded-full">{tag}</span>)
			}
		</div>
		<slot />
	</article>
</Layout>

