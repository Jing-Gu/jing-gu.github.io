---
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Layout from '../../layouts/Layout.astro'

const blogEntries = (await getCollection('blog')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---
<Layout title="Blog">
	<main>
		<section>
			<ul class="flex flex-col gap-4">
				{
					blogEntries
					.map((blogPost) => (
						<li class="[&_p]:text-jg-charcoal [&_p]:hover:text-jg-teal [&_time]:text-jg-smoke [&_time]:text-sm">
							<a href={`/blog/${blogPost.slug}`} class="flex flex-col md:flex-row md:justify-between md:items-center">
								<div class="flex flex-col md:flex-row md:gap-6">
									<p class="">{blogPost.data.title}</p>
									<div class="flex gap-2">
									{
										blogPost.data.tags?.map((tag) => (
											<span class="text-jg-teal text-xs leading-6">#{tag}</span>
										))
									}
									</div>
								</div>
								<FormattedDate date={blogPost.data.date} />
							</a>
						</li>
					))
				}
			</ul>
		</section>
	</main>

</Layout>

